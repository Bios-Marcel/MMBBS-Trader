<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<TabPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
	minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0"
	tabClosingPolicy="UNAVAILABLE" xmlns="http://javafx.com/javafx/8.0.111"
	xmlns:fx="http://javafx.com/fxml/1">
	<tabs>
		<Tab text="Connection">
			<content>
				<VBox spacing="10.0">
					<children>
						<VBox>
							<children>
								<HBox spacing="10.0">
									<children>
										<VBox HBox.hgrow="ALWAYS">
											<children>
												<Label text="Server" />
												<TextField fx:id="serverTextField" onAction="#onConnect"
													maxWidth="1.7976931348623157E308" promptText="Enter serveraddress"
													text="172.20.166.105" />
											</children>
										</VBox>
										<VBox HBox.hgrow="ALWAYS">
											<children>
												<Label text="Database" />
												<TextField fx:id="databaseTextField" onAction="#onConnect"
													maxWidth="1.7976931348623157E308" promptText="Enter databasename"
													text="mmbbs_trader" />
											</children>
										</VBox>
									</children>
								</HBox>
								<HBox spacing="10.0">
									<children>
										<VBox HBox.hgrow="ALWAYS">
											<children>
												<Label text="DB-User" />
												<TextField fx:id="dbUsernameTextField" onAction="#onConnect"
													maxWidth="1.7976931348623157E308" promptText="Enter Username of DB user"
													text="mmbbs" />
											</children>
										</VBox>
										<VBox HBox.hgrow="ALWAYS">
											<children>
												<Label text="DB-Password" />
												<PasswordField fx:id="dbPasswordTextField"
													onAction="#onConnect" maxWidth="1.7976931348623157E308"
													promptText="Enter password" />
											</children>
										</VBox>
									</children>
								</HBox>
							</children>
						</VBox>
						<TableView fx:id="activeTraderTableView" maxHeight="1.7976931348623157E308"
							maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
							<columns>
								<TableColumn fx:id="columnId" maxWidth="50.0"
									minWidth="50.0" prefWidth="-1.0" text="ID">
									<cellValueFactory>
										<PropertyValueFactory property="id" />
									</cellValueFactory>
								</TableColumn>
								<TableColumn fx:id="columnName" minWidth="100.0"
									prefWidth="100.0" text="Name">
									<cellValueFactory>
										<PropertyValueFactory property="name" />
									</cellValueFactory>
								</TableColumn>
							</columns>
							<columnResizePolicy>
								<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
							</columnResizePolicy>
						</TableView>
						<ButtonBar prefHeight="40.0" prefWidth="200.0">
							<buttons>
								<Button mnemonicParsing="false" onAction="#onConnect"
									text="Connect" />
							</buttons>
						</ButtonBar>
					</children>
					<padding>
						<Insets  bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</VBox>
			</content>
		</Tab>
		<Tab fx:id="tradeTab" disable="true" text="Trade">
			<content>
				<VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
					spacing="10.0">
					<children>
						<HBox maxHeight="1.7976931348623157E308" minWidth="0.0"
							VBox.vgrow="ALWAYS">
							<children>
								<VBox maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
									<children>
										<Label text="Hafen" />
										<TableView maxHeight="1.7976931348623157E308"
											maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
											<columns>
												<TableColumn maxWidth="45.0" minWidth="45.0"
													prefWidth="45.0" text="ID" />
												<TableColumn prefWidth="75.0" text="Name" />
												<TableColumn prefWidth="75.0" text="Menge" />
												<TableColumn prefWidth="75.0" text="Preis" />
											</columns>
											<columnResizePolicy>
												<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
											</columnResizePolicy>
										</TableView>
									</children>
								</VBox>
								<VBox alignment="CENTER" maxHeight="1.7976931348623157E308"
									spacing="20.0" HBox.hgrow="NEVER">
									<children>
										<Label alignment="CENTER" maxWidth="1.7976931348623157E308"
											text="Menge" />
										<TextField />
										<Button maxWidth="1.7976931348623157E308"
											mnemonicParsing="false" text="Kaufen ➡" />
										<Button maxWidth="1.7976931348623157E308"
											mnemonicParsing="false" text="⬅ Verkaufen" />
									</children>
									<HBox.margin>
										<Insets left="5.0" right="5.0" />
									</HBox.margin>
								</VBox>
								<VBox maxHeight="1.7976931348623157E308" HBox.hgrow="ALWAYS">
									<children>
										<Label text="Schiff" />
										<TableView maxHeight="1.7976931348623157E308"
											maxWidth="1.7976931348623157E308" VBox.vgrow="ALWAYS">
											<columns>
												<TableColumn maxWidth="45.0" minWidth="45.0"
													prefWidth="45.0" text="ID" />
												<TableColumn prefWidth="75.0" text="Name" />
												<TableColumn prefWidth="75.0" text="Menge" />
											</columns>
											<columnResizePolicy>
												<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
											</columnResizePolicy>
										</TableView>
									</children>
								</VBox>
							</children>
						</HBox>
						<Separator prefWidth="200.0" />
						<HBox spacing="10.0">
							<children>
								<Label maxHeight="1.7976931348623157E308" minWidth="-Infinity"
									text="Trader:" />
								<Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
									text="Otto" HBox.hgrow="ALWAYS" />
								<Label maxHeight="1.7976931348623157E308" minWidth="-Infinity"
									text="Standort:" />
								<Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
									text="Deutschland" HBox.hgrow="ALWAYS" />
								<Label maxHeight="1.7976931348623157E308" minWidth="-Infinity"
									text="Geld:" />
								<Label maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
									text="99999" HBox.hgrow="ALWAYS" />
							</children>
						</HBox>
						<Separator prefWidth="200.0" />
						<HBox maxWidth="1.7976931348623157E308" spacing="10.0"
							VBox.vgrow="NEVER">
							<children>
								<Label alignment="CENTER" maxHeight="1.7976931348623157E308"
									minWidth="-Infinity" text="Nach" />
								<ComboBox maxWidth="1.7976931348623157E308" HBox.hgrow="ALWAYS" />
								<Button minWidth="-Infinity" mnemonicParsing="false"
									text="Reisen" />
							</children>
						</HBox>
					</children>
					<padding>
						<Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
					</padding>
				</VBox>
			</content>
		</Tab>
		<Tab fx:id="masterTab" text="Master" disable="true">
			<content>
				<VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
					<children>
						<TextArea fx:id="consoleOutput" editable="false"
							maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308"
							wrapText="true" VBox.vgrow="ALWAYS" />
						<TextField fx:id="consoleInput" maxWidth="1.7976931348623157E308"
							onAction="#executeCommand" promptText="Type help for a command overview" />
					</children>
					<padding>
						<Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
					</padding>
				</VBox>
			</content>
		</Tab>
	</tabs>
</TabPane>
